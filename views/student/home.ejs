<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <h1>Welcome, <%= user.name %>!</h1>
        <nav>
            <ul>
                <li><a href="/student/cart">View Cart</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    
    <div class="container">
        

        <!-- Enrolled Courses Section -->
        <section class="enrolled-courses">
            <h2>Your Enrolled Courses</h2>
            <div class="course-grid">
                <% enrolledCourses.forEach(course => { %>
                    <div class="course-card enrolled">
                        <h3><%= course.name %></h3>
                        <p><%= course.description %></p>
                        <span>Credits: <%= course.credits %></span>
                    </div>
                <% }) %>
            </div>
        </section>

        <!-- Available Courses Section -->
        <section class="catalog">
            <h2>Course Catalog</h2>
            <div class="course-grid">
                <% availableCourses.forEach(course => { %>
                    <div class="course-card">
                        <h3><%= course.name %></h3>
                        <p><%= course.description %></p>
                        <form action="/student/catalog/<%= course._id %>/add" method="POST" class="add-to-cart-form">
                            <button type="submit" class="add-to-cart">Add to Cart</button>
                        </form>
                        <a href="/student/catalog/<%= course._id %>">View Details</a>
                    </div>
                <% }) %>
            </div>
        </section>
    </div>

    <script>
        // Using AJAX to add courses to the cart
        $(document).ready(function () {
            $('.add-to-cart-form').on('submit', function (e) {
                e.preventDefault(); // Prevent default form submission
                const form = $(this);
                const courseId = form.attr('action').split('/').pop(); // Get courseId from the action URL

                $.ajax({
                    type: 'POST',
                    url: form.attr('action'),
                    data: { courseId: courseId },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message); // Display success message
                        } else {
                            alert('Failed to add to cart');
                        }
                    },
                    error: function () {
                        alert('Error adding course to cart');
                    }
                });
            });
        });
    </script>
</body>
</html>
