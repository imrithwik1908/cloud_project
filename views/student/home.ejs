<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Welcome, <%= user.name %>!</h1>
        <nav>
            <ul>
                <li><a href="/student/cart">View Cart</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    
    <div class="container">
        

        <!-- Enrolled Courses Section -->
        <section class="enrolled-courses">
            <h2>Your Enrolled Courses</h2>
            <div class="course-grid">
                <% enrolledCourses.forEach(course => { %>
                    <div class="course-card enrolled">
                        <h3><%= course.name %></h3>
                        <p><%= course.description %></p>
                        <span>Credits: <%= course.credits %></span>
                    </div>
                <% }) %>
            </div>
        </section>

        <!-- Available Courses Section -->
        <section class="catalog">
            <h2>Course Catalog</h2>
            <div class="course-grid">
                <% availableCourses.forEach(course => { %>
                    <div class="course-card">
                        <h3><%= course.name %></h3>
                        <p><%= course.description %></p>
                        <form action="/student/catalog/<%= course._id %>/add" method="POST">
                            <button type="submit" class="add-to-cart">Add to Cart</button>
                        </form>
                        <a href="/student/catalog/<%= course._id %>">View Details</a>
                    </div>
                <% }) %>
            </div>
        </section>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Select all forms in the course catalog section
            const forms = document.querySelectorAll('.catalog form');
    
            forms.forEach(form => {
                form.addEventListener('submit', async (event) => {
                    event.preventDefault(); // Prevent the form from submitting normally
    
                    const actionUrl = form.action; // Get the action URL of the form
                    const courseCard = form.closest('.course-card'); // Get the parent course card
    
                    try {
                        // Send the form data using Fetch API
                        const response = await fetch(actionUrl, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });
    
                        if (response.ok) {
                            alert('Course added to cart successfully!');
    
                            // Remove the course card from the catalog
                            courseCard.remove();
                        } else {
                            alert('Failed to add course to cart.');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('An error occurred while adding the course.');
                    }
                });
            });
        });
    </script>
</body>
</html>
