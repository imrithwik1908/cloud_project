<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Your Cart</h1>
        <nav>
            <ul>
                
                <li><a href="/student/home">Back to course selection</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        

        <!-- Cart Content -->
        <% if (cart.length > 0) { %>
            <section class="cart-items">
                <h2 class="space-css">Items in Your Cart</h2>
                <ul>
                    <% cart.forEach(course => { %>
                        <li class="course-card-cart">
                            <h3><%= course.name %></h3>
                            <p><%= course.description %></p>
                            <p><strong>Credits:</strong> <%= course.credits %></p>
                        </li>
                    <% }) %>
                </ul>

                <form action="/student/enroll" method="POST">
                    <button type="submit" class="go-to-cart">Enroll in Selected Courses</button>
                </form>
            </section>
        <% } else { %>
            <section class="empty-cart">
                <p>Your cart is empty.</p>
                <a href="/student/catalog" class="go-to-cart">Browse Courses</a>
            </section>
        <% } %>
    </div>
</body>
</html>
