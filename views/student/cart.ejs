<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header class="cart-header">
        <h1>Your Cart</h1>
        <nav>
            <ul>
                <li><a href="/student/home" class="back-to-home">Back to Course Selection</a></li>
            </ul>
        </nav>
    </header>

    <div class="container cart-container">
        <% if (cart.length > 0) { %>
            <!-- Cart Content -->
            <section class="cart-items">
                <h2>Items in Your Cart</h2>
                <ul class="cart-list">
                    <% cart.forEach(course => { %>
                        <li class="course-card-cart">
                            <h3><%= course.name %></h3>
                            <p><%= course.description %></p>
                            <p><strong>Credits:</strong> <%= course.credits %></p>
                        </li>
                    <% }) %>
                </ul>
                <form action="/student/enroll" method="POST" class="enroll-form">
                    <button type="submit" class="primary-btn">Enroll in Selected Courses</button>
                </form>
            </section>
        <% } else { %>
            <!-- Empty Cart Message -->
            <section class="empty-cart">
                <p>Your cart is empty.</p>
                <a href="/student/catalog" class="primary-btn">Browse Courses</a>
            </section>
        <% } %>
    </div>
</body>
</html>
