<!-- No header -->
<div class="container">
    <!-- Course Information -->
    <section class="course-card-enrolled">
        <p><strong>Professor:</strong> <%= course.professor.name %> (<%= course.professor.department %>)</p>
        <p><strong>Description:</strong> <%= course.description %></p>
        <p><strong>Credits:</strong> <%= course.credits %></p>
    </section>

    <!-- Add to Cart Form -->
    <section class="add-to-cart-section">
        <form action="/student/catalog/<%= course._id %>/add" method="POST">
            <button type="submit" class="add-to-cart">Add to Cart</button>
        </form>
    </section>
</div>
