<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrolled Courses</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Your Enrolled Courses</h1>
        <nav>
            <ul>
                
                <li><a href="/student/home">Back to course selection</a></li>
            </ul>
        </nav>
    </header>
    
    <div class="container">
        

        <!-- Enrolled Courses Content -->
        <% if (courses.length > 0) { %>
            <section class="enrolled-courses">
                <ul>
                    <% courses.forEach(course => { %>
                        <li class="course-card-enrolled enrolled">
                            <h3><%= course.name %></h3>
                            <p><strong>Credits:</strong> <%= course.credits %></p>
                        </li>
                    <% }) %>
                </ul>
            </section>
        <% } else { %>
            <section class="empty-courses">
                <p>You are not enrolled in any courses yet.</p>
                <a href="/student/catalog" class="go-to-cart">Browse Available Courses</a>
            </section>
        <% } %>
    </div>
</body>
</html>
