<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professor Dashboard</title>
    <link rel="stylesheet" href="/prof.css">
</head>
<body>
    <header>
        <h1>Welcome, <%= professor.name %>!</h1>
        <p>Department: <%= professor.department %></p>
        <nav>
            <a href="/professor/courses">Manage Courses</a>
            <a href="/logout">Logout</a>
        </nav>
    </header>
    <main>
        <section class="courses-section">
            <h2>Your Courses</h2>
            <% if (professor.coursesTaught.length > 0) { %>
                <ul class="course-list">
                    <% professor.coursesTaught.forEach(course => { %>
                        <li><%= course.name %></li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No courses added yet.</p>
            <% } %>
        </section>
        <section class="add-course-section">
            <a class="button" href="/professor/courses/new">+ Add New Course</a>
        </section>
    </main>
</body>
</html>
